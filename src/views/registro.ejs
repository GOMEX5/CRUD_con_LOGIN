<%- include('partials/_head') %>

<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card animate__animated animate__flipInY  cardCss2">
                <div class="card-header bg-dark text-white text-center">
                    <h1>Registro</h1>
                </div>
                <div class="card-body">
                    <form action="/registrar" method="POST">
                        <div class="form-group mt-3">
                            <input type="text" name="user" required placeholder="UserName" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <input type="password" name="pass" required placeholder="Password" class="form-control">
                        </div>
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <button type="submit" class="btn btn-primary mt-3">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>